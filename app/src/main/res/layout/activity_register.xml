<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plant1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="30dp"
        android:text="회원가입"
        android:textColor="#396834"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        android:layout_marginTop="30dp"
        android:id="@+id/id_layout"
        android:layout_centerHorizontal="true"
        >

        <EditText
            android:id="@+id/id_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:hint="아이디"
            android:padding="20dp" />

        <Button
            android:id="@+id/idck_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:backgroundTint="#396834"
            android:text="중복검사"
            android:textStyle="bold"/>
    </LinearLayout>


    <EditText
        android:id="@+id/pw_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="비밀번호"
        android:padding="10dp" />

    <EditText
        android:id="@+id/pwck_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pw_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="비밀번호확인"
        android:padding="10dp" />

    <EditText
        android:id="@+id/name_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwck_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="이름"
        android:padding="10dp" />

    <EditText
        android:id="@+id/address_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_register"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="주소"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#396834"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="회원가입"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#396834"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="취소"
            android:textStyle="bold"
            >

        </Button>

    </LinearLayout>


</RelativeLayout>