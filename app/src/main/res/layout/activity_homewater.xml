<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plant1"
    tools:context=".PlantWaterCountActivity">

    <TextView
        android:id="@+id/waterplant"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ff"
        android:text="물 줘야하는 식물"
        android:textAlignment="center"
        android:textColor="#62C5EA"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_waterCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="확인"/>


    <ListView
        android:id="@+id/waterplantlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/waterplant"
        />

</RelativeLayout>